<%= form_for @note do |f| %>
  <p>
    <%= f.text_field :title, placeholder: title_placeholder %>
  </p>
  <p>
    <%= f.bootsy_area :body_html, placeholder: 'Hey', autofocus: title_autofocus?(f.object) %>
  </p>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>